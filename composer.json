{
  "name": "gqmnr/kata-phpunit-skeleton",
  "type": "project",
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "friendsofphp/php-cs-fixer": "^3.58",
    "phpstan/phpstan": "^1.11",
    "phpstan/extension-installer": "^1.4",
    "tomasvotruba/unused-public": "^0.3.9",
    "phpstan/phpstan-phpunit": "^1.4"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "App\\Kata\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Kata\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Gildas Quéméner",
      "email": "gildas.quemener@gmail.com"
    }
  ],
  "config": {
    "bin-dir": "bin/",
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "scripts": {
    "phpstan": "phpstan",
    "tests": "phpunit",
    "cs": "php-cs-fixer fix"
  }
}
